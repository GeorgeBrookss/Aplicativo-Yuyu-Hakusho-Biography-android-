<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".hieiBio"
    android:background="@drawable/fundohiei"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jaganshi Hiei"
        android:textSize="40dp"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        />




    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="416dp"
        android:layout_height="416dp"
        android:src="@drawable/hieionbio"
        tools:layout_editor_absoluteX="-56dp"
        tools:layout_editor_absoluteY="412dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='Hiei é um demônio de fogo nascido de uma Mulher do Gelo que manteve relações com um macho de outra espécie e por isso é considerado impuro e maldito.
  Banido do País do Gelo ainda bebê e criado por ladrões em uma floresta, Hiei desenvolveu uma personalidade apática e indiferente quanto a todos ao seu redor.'
        android:paddingTop="60dp"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>